[user]
  name = Vasiliy Spodin
  email = v@spodin.com

[credential]
	helper = cache

[alias]
  co = checkout
  cp = cherry-pick
  ci = commit
  st = status
  br = branch

[color]
  ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red reverse
  [color "status"]
    added = yellow
    changed = red
    untracked = cyan
  [core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
