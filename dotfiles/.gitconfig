[user]
  name = Vasiliy Spodin
  email = v@spodin.engineer

[credential]
  helper = cache

[alias]
  co = checkout
  cp = cherry-pick
  ci = commit
  st = status
  br = branch

[color]
  ui = auto

  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

  [color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red reverse

  [color "status"]
    added = yellow
    changed = red
    untracked = cyan
